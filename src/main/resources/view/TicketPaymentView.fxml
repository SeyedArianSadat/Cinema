<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="mftplus.controller.TicketPaymentController">


    <top>
        <VBox spacing="10" padding="15" alignment="CENTER">
            <Label text="ðŸŽŸ Ticket and Payment Form" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Ticket ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="ticketIdText" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Event ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="eventIdText" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Customer ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="customerIdText" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Seat:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="seatText" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Amount:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="amountText" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Payment Type:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="paymentTypeComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="saveButton" text="Save" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="editButton" text="Edit" style="-fx-background-color: #FFA500; -fx-text-fill: white;"/>
                <Button fx:id="deleteButton" text="Delete" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>


    <center>
        <VBox spacing="10" padding="15" alignment="CENTER">
            <Label text="ðŸŽ« Tickets Table" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Search by Customer ID:"/>
                <TextField fx:id="searchCustomerIdText" prefWidth="100"/>
            </HBox>

            <TableView fx:id="ticketTable" prefHeight="300" prefWidth="600">
                <columns>
                    <TableColumn fx:id="ticketIdColumn" text="Ticket ID" prefWidth="70"/>
                    <TableColumn fx:id="eventIdColumn" text="Event ID" prefWidth="70"/>
                    <TableColumn fx:id="customerIdColumn" text="Customer ID" prefWidth="90"/>
                    <TableColumn fx:id="seatColumn" text="Seat" prefWidth="80"/>
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="90"/>
                    <TableColumn fx:id="paymentTypeColumn" text="Payment Type" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>